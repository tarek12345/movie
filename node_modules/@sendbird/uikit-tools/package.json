{
  "name": "@sendbird/uikit-tools",
  "version": "0.0.2",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sendbird/sendbird-uikit-core-ts.git",
    "directory": "packages/uikit-tools"
  },
  "source": "src",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "src",
    "!**/__tests__",
    "!**/tsconfig.tsbuildinfo",
    "CHANGELOG.md",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "rm -rf dist && yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc --project tsconfig.json --module commonjs --outDir dist/cjs && echo '{\"type\": \"commonjs\"}' >> dist/cjs/package.json",
    "build:esm": "tsc --project tsconfig.json --outDir dist/esm && echo '{\"type\": \"module\"}' >> dist/esm/package.json",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@sendbird/chat": "^4.13.1",
    "@types/react": "^18.2.0",
    "type-fest": "^3.11.1"
  },
  "peerDependencies": {
    "@sendbird/chat": ">=4.10.5 <5",
    "react": ">=16.8.6"
  },
  "gitHead": "dcd044768de8cca0a69e7bbb6a33c95ce6223972"
}
